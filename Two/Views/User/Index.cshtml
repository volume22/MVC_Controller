@model IEnumerable<Two.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    <h2>List of Users</h2>
    <a class="btn btn-link" asp-controller="User" asp-action="Create" method="post" >Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Lastname</th>
                <th scope="col">Position</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th>@user.id</th>
                    <td>@user.Name</td>
                    <td>@user.LastName</td>
                    <td>@user.Position?.Title</td>
                </tr>
            <td>
                <a asp-action="Edit" asp-route-id="@user.id">Edit</a> |
        @*        <a asp-action="Details" asp-route-id="@user.id">Details</a> |*@

                <a asp-action="Delete" asp-route-id="@user.id">Delete</a>
            </td>
        }

            </tbody>
        </table>

</div>



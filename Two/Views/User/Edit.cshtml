@model User

@{
    ViewData["Title"] = "Edit Model";
}

<div class="container">
    <form class="form-group" asp-controller="User" asp-action="Edit" method="post">

        <div class="form-group">
            <label for="Name">Name</label>
            <input class="form-control" name="Name" value="@Model.Name" />
        </div>
        <div class="form-group">
            <label for="LastName">Name</label>
            <input class="form-control" name="LastName" value="@Model.LastName" />
        </div>
        <div class="form-group">
            <label for="PositionId">Choose position</label>
            <select class="form-control" name="PositionId">
                @foreach (var position in (IEnumerable<Position>)ViewBag.Positions)
                {
                    <option value="@position.id">
                        @position.Title
                    </option>
                }
            </select>
        </div>
        <div class="form-group">
            <<input class="btn btn-link" type="submit" value="Save" />
        </div>
    </form>
</div>


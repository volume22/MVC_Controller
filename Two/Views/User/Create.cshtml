@model User

@{ 
    ViewData["Title"] = "New user Model";

}


<div class="container">
    <form class="form-group" asp-controller="User" asp-action="Create" method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input name="Name" placeholder="My name" />
        </div>
        <div class="form-group">
            <label for="LastName">LastName</label>
            <input name="LastName" placeholder="My lastname" />
        </div>
        <div class="form-group" >
            <label for="PositionId">Choose position</label>
            <select class="form-control" name="PositionId">
                @foreach(var position in (IEnumerable<Position>)ViewBag.Positions)
            {
              <option value="@position.id">
                  @position.Title
              </option>
            }


            </select>
        </div>
        <div class="form-group">
            <<input class="btn btn-link" type="submit" value="Save" />
        </div>

    </form>
</div>
